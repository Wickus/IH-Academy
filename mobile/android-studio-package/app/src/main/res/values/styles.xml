<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using native Android themes -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/ih_background</item>
        <item name="android:textColorPrimary">@color/ih_text</item>
        <item name="android:textColorSecondary">@color/ih_text_secondary</item>
    </style>

    <!-- App theme with no action bar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Button styles using native Android widgets -->
    <style name="PrimaryButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:elevation">@dimen/elevation_button</item>
    </style>

    <style name="SecondaryButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/ih_primary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:elevation">@dimen/elevation_button</item>
    </style>

    <!-- Text styles -->
    <style name="HeadingLarge">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/ih_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingMedium">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/ih_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/ih_text</item>
    </style>

    <style name="BodyTextSecondary">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/ih_text_secondary</item>
    </style>

    <style name="CaptionText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/ih_text_secondary</item>
    </style>

    <!-- Input field styles using native Android widgets -->
    <style name="InputField" parent="android:Widget.EditText">
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/ih_text</item>
        <item name="android:textColorHint">@color/ih_text_secondary</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Card styles simplified without external dependencies -->
    <style name="CardView">
        <item name="android:background">@color/ih_surface</item>
        <item name="android:elevation">@dimen/elevation_card</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <!-- Toolbar styles using native widgets -->
    <style name="ToolbarStyle" parent="android:Widget.Toolbar">
        <item name="android:background">@color/ih_primary</item>
        <item name="android:elevation">@dimen/elevation_card</item>
    </style>

    <!-- Simplified layout styles -->
    <style name="TabLayoutStyle">
        <item name="android:background">@color/ih_surface</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/ih_surface</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Progress bar styles -->
    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateTint">@color/ih_primary</item>
    </style>
</resources>