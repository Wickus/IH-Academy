{
  "app": {
    "name": "IH Academy",
    "slug": "ih-academy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#20366B"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "africa.itshappening.academy",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to securely authenticate and access your academy account.",
        "NSCameraUsageDescription": "Camera access is required for Face ID authentication.",
        "NSMicrophoneUsageDescription": "Microphone access may be required for certain coaching features.",
        "NSLocationWhenInUseUsageDescription": "Location access helps find nearby sports academies and classes.",
        "NSPhotoLibraryUsageDescription": "Photo library access allows you to upload profile pictures and academy logos.",
        "NSContactsUsageDescription": "Contact access helps you invite friends to join your academy.",
        "NSCalendarsUsageDescription": "Calendar access allows you to sync your class schedule.",
        "NSRemindersUsageDescription": "Reminders access helps schedule class notifications.",
        "CFBundleDisplayName": "IH Academy",
        "CFBundleShortVersionString": "1.0.0",
        "CFBundleVersion": "1",
        "ITSAppUsesNonExemptEncryption": false,
        "LSRequiresIPhoneOS": true,
        "UILaunchStoryboardName": "LaunchScreen",
        "UIRequiredDeviceCapabilities": [
          "armv7"
        ],
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown"
        ],
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationPortrait",
          "UIInterfaceOrientationPortraitUpsideDown",
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "UIBackgroundModes": [
          "background-fetch",
          "remote-notification"
        ]
      },
      "associatedDomains": [
        "applinks:academy.itshappening.africa",
        "applinks:itshappening.africa"
      ],
      "splash": {
        "backgroundColor": "#20366B",
        "resizeMode": "contain",
        "tabletImage": "./assets/splash-tablet.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#20366B"
      },
      "package": "africa.itshappening.academy",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_CONTACTS",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "academy.itshappening.africa"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "splash": {
        "backgroundColor": "#20366B",
        "resizeMode": "contain",
        "mdpi": "./assets/splash-mdpi.png",
        "hdpi": "./assets/splash-hdpi.png",
        "xhdpi": "./assets/splash-xhdpi.png",
        "xxhdpi": "./assets/splash-xxhdpi.png",
        "xxxhdpi": "./assets/splash-xxxhdpi.png"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "IH Academy",
      "shortName": "IH Academy",
      "lang": "en",
      "scope": "/",
      "themeColor": "#20366B",
      "backgroundColor": "#20366B",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/"
    },
    "plugins": [
      "expo-font",
      "expo-localization",
      "expo-notifications",
      "expo-biometrics",
      "expo-secure-store",
      "expo-file-system",
      "expo-network",
      "expo-linking",
      "expo-splash-screen",
      "expo-status-bar",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#20366B",
          "defaultChannel": "default",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      [
        "expo-biometrics",
        {
          "faceIDPermission": "Use Face ID to securely authenticate and access your academy account."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Location access helps find nearby sports academies and classes."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Camera access is required for Face ID authentication and profile picture uploads."
        }
      ],
      [
        "@react-native-firebase/app",
        {
          "android": {
            "googleServicesFile": "./google-services.json"
          },
          "ios": {
            "googleServicesPlist": "./GoogleService-Info.plist"
          }
        }
      ]
    ],
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "itshappening-africa",
            "project": "ih-academy-mobile"
          }
        }
      ]
    },
    "privacy": "public",
    "scheme": "ih-academy",
    "extra": {
      "eas": {
        "projectId": "ih-academy-mobile"
      },
      "api": {
        "baseUrl": "https://academy.itshappening.africa/api",
        "timeout": 30000
      },
      "payfast": {
        "sandbox": true,
        "merchantId": "10000100",
        "merchantKey": "46f0cd694581a"
      },
      "analytics": {
        "enabled": true,
        "crashReporting": true
      },
      "features": {
        "biometrics": true,
        "pushNotifications": true,
        "offlineMode": true,
        "multiTenant": true
      }
    }
  }
}